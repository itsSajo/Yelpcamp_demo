<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Add New Comment to <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div style="width: 30%; margin: 25px auto">
          <div class="form-group">
            <!--name to klucz parametru z wartoscia z inputa-->
            <input class="form-control" type="text" name="comment[text]" placeholder="name">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="image url">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
        </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>

</div>


<% include ../partials/footer %>
